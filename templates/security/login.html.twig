{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <div class="container_fluid row justify-content-center align-items-center m-0 p-3 container_form_login">
        <form method="post" id="formulaire_login" class="col-sm-12 col-md-8 col-lg-6 col-xl-4">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes logué avec {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnecter</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Se connecter</h1>
            <label class="form-label" for="inputEmail">Email</label>
            <input class="form-control mb-3" type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            <label class="form-label" for="inputPassword">Mot de Passe</label>
            <input class="form-control" type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html
            #}
            <div class="checkbox mt-2 mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Se souvenir de moi
                </label>
            </div>
            <div class="row col-12 justify-content-center">
                <button class="btn btn-lg btn-secondary col-sm-6 col-lg-4" type="submit">
                    Se connecter
                </button>
            </div>

        </form>
    </div>
{% endblock %}
