{% extends 'base.html.twig' %}

{% block title %}Annuler Sortie{% endblock %}

{% block main %}

    <div class=" row col-sm-12 col-lg-10 p-3 justify-content-center">

        <div class="col-12 text-center mb-3">
            <h1>Annuler une sortie</h1>
        </div>
        <div class="col-sm-12 col-lg-8">
            <table class="table col-12">
                <tr>
                    <th>Nom de la sortie</th>
                    <td>{{ sortie.nom }}</td>
                </tr>
                <tr>
                    <th>Date de la sortie</th>
                    <td>{{ sortie.dateHeureDebut|date('d/m/Y') }}</td>
                </tr>
                <tr>
                    <th>Campus</th>
                    <td>{{ sortie.campus.nom|upper }}</td>
                </tr>
                <tr>
                    <th>Lieu</th>
                    <td>{{ sortie.lieu.nom }} <br>
                        {{ sortie.lieu.rue }} <br>
                        {{ sortie.lieu.ville.codePostal }} {{ sortie.lieu.ville.nom|upper }}</td>
                </tr>
            </table>

            {{ form_start(form) }}

                {{ form_label(form.motif) }}
                {{ form_widget(form.motif) }}
                <div class="row mt-3">
                    <div class="col-12">
                        {{ form_widget(form.save) }}
                        <a href="{{ path('main_home') }}">
                            {{ form_widget(form.reset) }}
                        </a>
                    </div>
                </div>

            {{ form_end(form) }}
        </div>

    </div>

{% endblock %}