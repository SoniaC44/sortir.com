{% extends 'base.html.twig' %}

{% block title %}Sortie index{% endblock %}

{% block main %}
<div class="row col-sm-12 col-lg-10 p-3">
    <div class="col-12 text-center mb-4">
        <h1>Sortie index</h1>
    </div>


    {{ app.user.prenom }} {{ app.user.nom|first }}.
    {{ "now"|date("d/m/Y") }}

    <table class="table">
        <thead>
            <tr>
                <th>Nom de la sortie</th>
                <th>Date de la sortie</th>
                <th>Clôture</th>
                <th>Inscrits/places</th>
                <th>Etat</th>
                <th>Inscrit</th>
                <th>Organisteur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            {% if sortie.etat.id != 7 %}
            <tr>
                <td>{{ sortie.nom }}</td>
                <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('d/m/Y H:i') : '' }}</td>
                <td>{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('d/m/Y') : '' }}</td>
                <td>{{ sortie.nbInscrits }}/{{ sortie.nbInscriptionsMax }}</td>
                <td>{{ sortie.etat.libelle }}</td>
                <td>{% if sortie.isInscrit %}
                        X
                    {% endif %}</td>
                <td>
                    <a href="{{ path('participant_show', {'id': sortie.organisateur.id}) }}"> {{ sortie.organisateur.prenom }} {{ sortie.organisateur.nom|first }}. </a>
                </td>
                <td>
                    <a href="{{ path('sortie_show', {'id': sortie.id}) }}">Afficher</a>
                    {% if sortie.isInscrit and "now"|date("Y-m-d") < sortie.dateLimiteInscription|date("Y-m-d")  %}
                        <a href="{{ path('sortie_show', {'id': sortie.id, 'action': 1}) }}">Se désister</a>
                    {% endif %}
                    {% if not sortie.isInscrit and "now"|date("Y-m-d") < sortie.dateLimiteInscription|date("Y-m-d")  and sortie.organisateur.id != app.user.id %}
                        <a href="{{ path('sortie_show', {'id': sortie.id, 'action': 2}) }}">S'inscrire</a>
                    {% endif %}
                    {% if sortie.etat.id == 1 and sortie.organisateur.id == app.user.id %}
                        <a href="{{ path('sortie_edit', {'id': sortie.id }) }}">Modifier</a> -
                        <a href="{{ path('sortie_show', {'id': sortie.id, 'action': 3 }) }}">Publier</a>
                    {% endif %}
                    {% if sortie.etat.id == 2 and "now"|date("Y-m-d") < sortie.dateLimiteInscription|date("Y-m-d") and sortie.organisateur.id == app.user.id  %}
                        <a href="{{ path('sortie_cancel', {'id': sortie.id}) }}">Annuler</a>
                    {% endif %}

                </td>
            </tr>
            {% endif %}
        {% else %}
            <tr>
                <td colspan="8">Il n'y a aucun résultat pour votre recherche</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{  form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit" class="btn btn-outline-dark">{{ button_label|default('Enregistrer') }}</button>
    {{ form_end(form) }}

    <a href="{{ path('sortie_new') }}">Créer une sortie</a>
</div>
{% endblock %}
